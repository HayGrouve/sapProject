<%- include("./partials/header") %>
<h1 class="mt-5 display-3 text-center font-weight-bolder"><a href="/application" class="brand"><i class="fab fa-redhat text-danger"></i>RedTell</a></h1>

<h3 class="text-center mt-5">Welcome back</h3>
<div class="form-container">
    <form action="/login" method="POST">
        <div class="form-group">
          <label for="email">Username or Email address</label>
          <input type="text" class="form-control" name="username" id="email" placeholder="username/example@domain.com">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" name="password" placeholder="password">
        </div>
        <button type="submit" class="btn btn-danger"><i class="fas fa-user"></i> Login</button>
      </form>
      <p class="mt-3">Don't have an acount yet? <a href="/register"></i> Sign Up</a> | Forgot your password? <a href="/forgot">Reset it</a></p>
</div>
<%- include("./partials/footer") %>
